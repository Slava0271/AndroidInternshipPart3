<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Data to make available to the XML via data binding. In this case,
     the whole ViewModel, so that we can access the LiveData,
     click handlers, and state variables. -->
    <data>

        <variable
            name="thirdQuestionViewModel"
            type="com.example.androidinternshippart3.firsttest.thirdquestion.ThirdQuestionViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".firsttest.thirdquestion.ThirdQuestionFragment">

        <TextView
            android:id="@+id/textViewQuestionThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={thirdQuestionViewModel.thirdQuestionModel.thirdQuestionText}"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewQuestion3"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewQuestionThird" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3question1"
            android:layout_width="0dp"
            android:layout_height="45sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button_style"
            android:onClick="@{()->thirdQuestionViewModel.setFirstButtonEvent()}"
            android:text="@{thirdQuestionViewModel.thirdQuestionModel.answerSpain}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewQuestion3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3question2"
            android:layout_width="0dp"
            android:layout_height="45sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button_style"
            android:onClick="@{() -> thirdQuestionViewModel.setSecondButtonEvent()}"
            android:text="@{thirdQuestionViewModel.thirdQuestionModel.answerUSA}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3question1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3question3"
            android:layout_width="0dp"
            android:layout_height="45sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button_style"
            android:onClick="@{()-> thirdQuestionViewModel.setThirdButtonEvent()}"
            android:text="@{thirdQuestionViewModel.thirdQuestionModel.answerUruguay}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3question2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
